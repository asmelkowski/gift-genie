# Terraform Variables for Gift Genie Infrastructure
# Copy this file to terraform.tfvars and fill in your values

# Scaleway Project ID
project_id = "your-project-id-here"

# Scaleway credentials (same as provider configuration)
# These are also used for database authentication
scw_access_key = "your-scaleway-access-key"
scw_secret_key = "your-scaleway-secret-key"

# Secret key for JWT signing (use a strong secret, minimum 32 characters)
secret_key = "your-secure-secret-key-here-minimum-32-chars"

# Redis password (use a strong password)
redis_password = "your-secure-redis-password-here"

# Optional: Custom domain for frontend
# custom_domain = "gift-genie.eu"
